---
const {
  title,
  description,
  imageUrl,
  link,
  author,
  year,
  status,
  genres,
  rating,
  japoneseTitle
} = Astro.props;
---

<article class="group relative overflow-hidden rounded-2xl shadow-xl transition-transform duration-300 ease-in-out hover:-translate-y-2 hover:shadow-2xl bg-black/90">
  <!-- Imagen del manga -->
  <img
    src={imageUrl}
    alt={title}
    loading="lazy"
    class="w-full h-[420px] object-cover transition-all duration-500 ease-in-out group-hover:scale-105"
  />
  <span class="absolute top-2 right-2 flex items-center gap-1 bg-gray-900 px-2 py-1 rounded-full">
    <p class="text-[0.65rem] sm:text-xs text-yellow-300 text-center">⭐ {rating}/10</p>
  </span>

  <!-- Botón Leer más -->
  <a
    href={link}
    class="absolute top-1/2 left-1/2 z-20 hidden group-hover:inline-block transform -translate-x-1/2 -translate-y-1/2 bg-yellow-400 text-gray-900 font-semibold px-6 py-2 rounded-full shadow-md transition-all duration-300 hover:scale-110 hover:bg-yellow-300"
  >
    Leer más
  </a>

  <!-- Capa de información -->
  <div class="absolute bottom-0 w-full bg-black/60 text-white px-4 py-3 text-xs sm:text-sm backdrop-blur-md transition-all duration-300 group-hover:scale-105">
    <h3 class="text-sm sm:text-base font-bold text-yellow-400 text-center">{title}</h3>
    <p class="text-[0.65rem] sm:text-xs italic text-gray-300 text-center">{japoneseTitle}</p>
    

    <div class="mt-2 grid grid-cols-2 gap-x-2 gap-y-1">
      <p><span class="font-semibold">Autor:</span> {author}</p>
      <p><span class="font-semibold">Año:</span> {year}</p>
      <p><span class="font-semibold">Estado:</span> <span class="text-green-400 font-bold">{status}</span></p>
      <p class="col-span-2"><span class="font-semibold">Géneros:</span> {genres?.join(", ")}</p>
    </div>

    <p class="mt-2 text-center text-[0.75rem] leading-snug text-gray-200">{description}</p>
  </div>
</article>
