---
const { links, pathname } = Astro.props;
---

<ul class="flex flex-col md:flex-row gap-4 px-6 pb-4 md:pb-0 text-sm md:items-center md:justify-end transition-all duration-300 ease-in-out w-full md:w-auto">
  {links.map((link) => (
    <li>
      <a
        href={link.href}
        class={`block py-2 md:py-0 transition-colors font-medium ${
          pathname.startsWith(link.href)
            ? 'text-yellow-400 underline underline-offset-4'
            : 'text-white hover:text-blue-400'
        }`}
      >
        {link.name}
      </a>
    </li>
  ))}
</ul>
