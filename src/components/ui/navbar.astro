---
import { TITLE_NAV, NAV_LINKS } from '../../constants/nav';
---

<nav class="bg-gray-900 text-white shadow-lg">
  <div class="flex items-center justify-between px-6 py-4">
    <div class="text-2xl font-extrabold tracking-tight hover:text-yellow-400 transition-colors">
      <a href="/">{TITLE_NAV}</a>
    </div>

    <!-- BOTÓN HAMBURGUESA -->
    <button id="menu-toggle" class="md:hidden" aria-label="Abrir menú">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- MENÚ NAVEGACIÓN -->
  <ul id="mobile-menu" class="hidden flex-col gap-4 px-6 pb-4 md:flex md:flex-row md:items-center md:justify-end text-sm">
    {NAV_LINKS.map((link) => (
      <li>
        <a
          href={link.href}
          class="block py-2 md:py-0 text-white hover:text-yellow-400 transition-colors"
        >
          {link.name}
        </a>
      </li>
    ))}
  </ul>

  <!-- JS para manejar apertura/cierre -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggle = document.getElementById("menu-toggle");
      const menu = document.getElementById("mobile-menu");

      toggle.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    });
  </script>
</nav>
