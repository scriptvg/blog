---
import { NAV_LINKS_MANGA, TITLE_NAV_MANGA } from '../../constants/nav';
const pathname = Astro.url.pathname;
const { title } = Astro.props;
---

<nav class="bg-gray-800 text-white shadow-md">
  <div class="flex items-center justify-between px-6 py-4">
    <!-- IZQUIERDA: logo / home -->
    <div class="text-xl font-bold">
      <a href="/" class="hover:text-blue-400 transition-colors">
        {TITLE_NAV_MANGA}
      </a>
    </div>

    <!-- CENTRO: tÃ­tulo del manga -->
    <div class="text-center text-lg font-semibold text-yellow-300 hidden md:block">
      {title}
    </div>

    <!-- DERECHA: enlaces -->
    <ul class="flex items-center gap-4">
      {NAV_LINKS_MANGA.map((link) => (
        <li>
          <a
            href={link.href}
            class={`transition-colors font-medium ${
              pathname === link.href
                ? 'text-yellow-400 underline'
                : 'text-white hover:text-blue-400'
            }`}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
